@using Musician.Entity.Concrete;
@using Musician.MVC.Areas.Admin.Models.ViewModels;
@model List<Request>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row  ">
            <div class="col-lg-12 mb-4 order-0 ">
                <div class="card">
                    <h5 class="card-header"></h5>
                    <div class="table-responsive text-nowrap">
                        <table class="table mb-5">
                            <thead>
                                <tr>
                                    <th>Öğretmen</th>
                                    <th>Öğrenci</th>
                                    <th>Enstruman</th>
                                    <th>Ücret</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Sipariş Durumu</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var request in Model)
                                {

                                    <tr class="table-default">
                                        <td><a href="#" class="badge bg-label-primary me-1">@request.Card.Teacher.User.FirstName</a></td>

                                        <td><a href="#" class="badge bg-label-primary me-1">@request.Student.User.FirstName</a></td>
                                        <td>
                                            <span class="badge bg-label-primary me-1">@request.Card.EnstrumentName</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-label-primary me-1">@request.Card.Price</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-label-primary me-1">@request.OrderDate.ToShortDateString()</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-label-primary me-1">@request.OrderState</span>
                                        </td>

                                       
                                      
                                    </tr>


                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--/ Contextual Classes -->

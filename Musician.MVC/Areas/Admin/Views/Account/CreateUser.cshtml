@model CreateUserViewModel
<div class="content-wrapper">


    <div class="container-xxl flex-grow-1 container-p-y ">
        <h4 class="fw-bold py-3 mb-4 d-inline"><span class="text-muted fw-light">Kullanıcı Oluştur </span></h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Admin" asp-controller="Account" asp-action="CreateUser"  enctype="multipart/form-data" method="post" id="formAccountSettings">
                    <div class="card mb-4">
                        <h5 class="card-header"></h5>
                       @* <div class="card-body">
                            <div class="d-flex align-items-start align-items-sm-center gap-4">
                                <img src=""
                                     alt=""
                                     class="d-block rounded"
                                     height="100"
                                     width="100"
                                     id="" />
                                <div class="button-wrapper">
                                    <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                        <span class="d-none d-sm-block">Yeni Fotoğraf Yükle</span>
                                        <i class="bx bx-upload d-block d-sm-none"></i>
                                        <input type="file" asp-for="ImageFile"
                                               id="upload"

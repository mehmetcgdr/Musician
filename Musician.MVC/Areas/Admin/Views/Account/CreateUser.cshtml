                        <div class="card-body">
                            <div class="d-flex align-items-start align-items-sm-center gap-4">
                                <img src="~/images/genel.png"
                                     alt="user-avatar"
                                     class="d-block rounded"
                                     height="100"
                                     width="100"
                                     id="uploadedAvatar" />
                                <div class="button-wrapper">
                                    <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                        <span class="d-none d-sm-block">Fotoğraf Yükle</span>
                                        <i class="bx bx-upload d-block d-sm-none"></i>
                                        <input type="file" asp-for="ImageFile"
                                               id="upload"
                                               class="account-file-input"
                                               hidden
                                               accept="~/images" />
                                    </label>
                                   

                                   
                                </div>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">

                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Adı</label>
                                    <input class="form-control" type="text" id="firstName" autofocus asp-for="FirstName" value="" />
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="lastName" class="form-label">Soyadı</label>
                                    <input class="form-control" type="text" id="lastName" autofocus asp-for="LastName" value="" />
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="email" class="form-label">E-mail</label>
                                    <input class="form-control" type="email" id="email" autofocus asp-for="Email" value="" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="organization" class="form-label">Kullanıcı Adı</label>
                                    <input class="form-control" type="text" id="userName" autofocus asp-for="UserName" value="" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="organization" class="form-label">Parola</label>
                                    <input class="form-control" type="password" id="userName" autofocus asp-for="Password" value="" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="organization" class="form-label">Parola Tekrarı</label>
                                    <input class="form-control" type="password" id="userName" autofocus asp-for="RePassword" value="" />
                                    <span class="text-danger" asp-validation-for="RePassword"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" for="phoneNumber">İletişim Numarası</label>
                                    <input class="form-control" type="number" id="phoneNumber" asp-for="PhoneNumber" value="" />
                                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                </div>

                                <div class="mb-3 col-md-6">
                                    <label for="address" class="form-label">Şehir</label>
                                    <input class="form-control" type="text" id="city" asp-for="City" value="" />
                                    <span class="text-danger" asp-validation-for="City"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="state" class="form-label">Doğum Tarihi</label>
                                    <div class='input-group date' id='startDate'>
                                        @{
                                            DateTime today = DateTime.Now;
                                            int year = today.Year;
                                            int yearPart = year - 18;
                                            int monthPart = today.Month;
                                            int dayPart = today.Day;
                                            DateTime minimumDateOfBirth = new DateTime(yearPart, monthPart, dayPart);
                                        }
                                        <input class="form-control" type="date"
                                               asp-for="DateOfBirth"
                                               value=""
                                               min="01-01-1990"
                                               max="@minimumDateOfBirth.ToString("yyyy-MM-dd")" />
                                        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                                    </div>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" >Cinsiyet</label>
                                    <select id="country" class="select2 form-select">

                                        <option value="Erkek">Erkek</option>
                                        <option value="Kadın">Kadın</option>

                                    </select>
                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label  class="form-label">Rol Bilgisi</label>
                                    <select  class=" form-select">
                                        <option  value="2">Admin</option>
                                        <option  value="0">Öğretmen</option>
                                        <option  value="1">Öğrenci</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="RoleId"></span>
                                </div>
                                <div class=" d-inline d-flex justify-content-between ">
                                    <div class="mt-2 d-inline">
                                        <button type="submit" class="btn btn-primary me-2">Oluştur</button>
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


<div class="content-backdrop fade"></div>

@using Musician.MVC.Models.ViewModels.AccountModels;
@model UserManageViewModel
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    
    
</style>

<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
<link href="~/css/paper-dashboard.css" rel="stylesheet" />


<form asp-area=""
      asp-controller="Account"
      asp-action="Manage"
      method="post"
enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
   
    <div class="container-fluid pl-5  pt-5 mt-5   ">
        <div class="content mt-5 pl-5  ">
            <div class="row pl-5">
                <div class="col-md-3 mt-5 ">
                    <div class="card card-user">
                        <div class="card-body ">
                            <div class="author ">
                                <h6>
                                    @if (User.IsInRole("Teacher"))
                                        @("Öğretmen")

                                </h6>
                                <h6>
                                    @if (User.IsInRole("Student"))
                                        @("Öğrenci")

                                </h6>
                               <div class="col">
                                    <img class="avatar border-gray d-inline" src="~/images/@Model.Image.Url"  >

                               <input type="file" asp-for="ImageF"  class="w-50 h-50 align-items-center"   accept="~/images/"/>
                                </div>
                            
                               

                                    <h5 class="title">@Model.FirstName @Model.LastName</h5>
                                @{
                                    int yearAge = DateTime.Now.Year - @Model.DateOfBirth.Value.Year;
                                }

                                    <h6>Yaş: @yearAge</h6>
                                    <p>@Model.Description  </p>
                                    

                                
                            </div>

                        </div>
                       
                            <div class="author mt-3">
                                <a>
                                    <h5 class="title">Doğum Tarihim</h5>
                                    <div class="container ">
                                        <div class="col-sm-12" style="height:75px;">
                                            <div class='col-md-12'>
                                                <div class="form-group">
                                                    

                                                    <div class='input-group date' id='startDate'>
                                                            @{
                                                                DateTime today = DateTime.Now;
                                                                int year = today.Year;
                                                                int yearPart = year - 18;
                                                                int monthPart = today.Month;
                                                                int dayPart = today.Day;
                                                                DateTime minimumDateOfBirth = new DateTime(yearPart, monthPart, dayPart);}
                                                        <input class="form-control"
                                                           asp-for="DateOfBirth"
                                                           value="@(Model.DateOfBirth==null ? minimumDateOfBirth.ToString("yyyy-MM-dd") : ((DateTime)Model.DateOfBirth).ToString("yyyy-MM-dd"))"
                                                           min="01-01-1990"
                                                           max="@minimumDateOfBirth.ToString("yyyy-MM-dd")" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <!-- element end -->

                                    </div>
                                </a>
                            </div>

                        
                    </div>

                </div>

                <div class="col-md-7 w-75 ">
                    <div class="card card-user">
                        <div class="card-header">
                            <h5 class="card-title display-6 fw-bold text-center">Profilim</h5>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-5 pr-1">
                                    <div class="form-group">
                                        <label>Kullanıcı Adı</label>
                                        <input type="text" class="form-control" disabled="" placeholder="" value="@Model.UserName">
                                    </div>
                                </div>
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Ad</label>
                                        <input type="text" class="form-control" placeholder="firstname" asp-for="FirstName" value="@Model.FirstName">
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Soyad</label>
                                        <input type="text" class="form-control" placeholder="lastname" asp-for="LastName" value="@Model.LastName">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Şehir</label>
                                        <input type="text" class="form-control" placeholder="@Model.City" asp-for="City" value="@Model.City">
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" placeholder="@Model.Email" asp-for="Email" value="@Model.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @if (User.IsInRole("Teacher"))
                                {
                                    <div class="col-md-6 pr-1 ">
                                        <div class="form-group ">
                                            <label>İletişim Numarası</label>
                                            <input type="number" class="form-control" placeholder="@Model.PhoneNumber" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                                        </div>
                                    </div>
                                }
                                <div class="col-md-6 pl-3">
                                    
                                    <div class="form-group">
                                       <label>Cinsiyet</label>
                                        <input type="text" class="form-control" placeholder="@Model.Gender" asp-for="Gender" value="@Model.Gender">
                                        
                                        
                                    </div>
                                </div>
                            </div>
                            
                           
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Hakkımda</label>
                                        <textarea class="form-control textarea" asp-for="Description">@Model.Description</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="update ml-auto  d-flex float-end">
                                    <button type="submit" class="btn btn_1 btn-primary btn-round">Güncelle</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>


<script src="~/js/jquery.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/perfect-scrollbar.jquery.min.js"></script>


<script src="~/js/bootstrap-notify.js"></script>
<!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
<script src="~/js/paper-dashboard.min." type="text/javascript"></script><!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="~/js/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

<!--  Plugin for the Wizard -->
<script src="~/js/gsdk-bootstrap-wizard.js"></script>

<!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
<script src="~/js/jquery.validate.min.js"></script>
<script>
    $(document).ready(function () {

        $(function () {
            $('#startDate').datepicker({
                format: 'dd/mm/yyyy'
            });
        });


    });
</script>
@using Musician.MVC.Models.ViewModels;
@model CardDetailsViewModel
<style>
  body,a,a:hover,span,span:hover, p, p:hover{
        text-decoration: none!important
    }
    ul,li{
       border-bottom:0px solid!important
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
@*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">*@
<section class="course_details_area section_padding pt-5 mt-5">
    <div class="container ">
        <div class="row">
            <div class="col-lg-8 course_details_left">
                
                <div class="main_image" >
                    <img class="img-fluid " src="~/images/photo.png" alt="">
                </div>
                <div class="content_wrapper">
                    <h4 class="title_top m-0 mb-3">@Model.EnstrumentName</h4>
                    <div class="content">
                       @Model.Description  
                    </div>
                </div>
            </div>
            <div class="col-lg-4 right-contents">
                <div class="sidebar_top">
                    <ul>
                       
                        <li class="justify-content-center d-flex pt-0 mt-0">
                            <img src="~/images/@Model.Image.Url" class="special_img" style="border-radius: 50%;">

                        </li>
                        <li class="color fw-bold text-center fs-4 pt-0 mt-0" >@Model.FirstName</li>
                       
                        <li>
                            <a class="justify-content-between d-flex" >
                                <p style="text-decoration:none">Saatlik Ücreti </p>
                                <span class="fw-bold">@($"{Model.Price:C0}")</span>
                            </a>
                        </li>
                        <li>
                            <a class="justify-content-between d-flex" >
                                <p>Cevaplama süresi </p>
                                <span class="">2 Saat</span>
                            </a>
                        </li>
                        <li>
                            <a class="justify-content-between d-flex" >
                                <p>Müsait Olduğu Saatler </p>
                                <span>08:00 - 22:00</span>
                            </a>
                        </li>
                        <li>
                            <a class="justify-content-between d-flex">
                                <p>Şehir </p>
                                <span>@Model.City</span>
                            </a>
                        </li>
                        

                    </ul>
                    <a asp-controller="Home" asp-action="RequestLesson" asp-route-id="@Model.Id" class="btn_1 d-block">Ders Talep Et</a>
                </div>

               
               
            </div>
        </div>
    </div>
</section>
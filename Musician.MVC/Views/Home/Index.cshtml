@using Musician.MVC.Models.ViewModels;

@model List<CardModel>
@if (Model == null || Model.Count == 0)
{
    <section class="banner_part ">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-xl-6 pt-5">
                    <div class="banner_text">
                        <div class="banner_text_iner">
                            <h5>Öğretmenini bul ve hemen öğrenmeye başla</h5>
                            <h1>
                                Online veya yüz yüze, istediğin her yerde
                            </h1>
                            <div class="col-xl-12 col-lg-12 p-0 m-0   ">
                                <!--Hero form -->
                            
                                <form asp-area="" asp-controller="Home" asp-action="GetBySearch" method="post" name="name"  role="search" class="search-box">
                                    
                                    
                                   <div class="input-form  ">
                                        <select  class=" form-select  asd w-50 searchbar d-inline text-danger  " name="name" asp-items="@ViewBag.Enstruments">
                                        </select>
                                        <select data-size="4" class="form-select asd w-25 searchbar d-inline ml-2 text-danger" name="city" asp-items="@ViewBag.cities">
                                        </select>
                                        <div class="search-form ">
                                            <button type="submit"><i class="ti-search"></i></button>
                                        </div>
                                    </div>

                                    



                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- member_counter counter start -->
    @*@await Html.PartialAsync("_CounterPartial")*@
    <!-- member_counter counter end -->

    <!-- feature_part start-->
    @await Html.PartialAsync("_FuturePartial")
    <!-- upcoming_event part start-->
    <!-- learning part start-->
    @await Html.PartialAsync("_LearningPartial")
    <!-- learning part end-->


    <!-- learning part start-->
    @await Html.PartialAsync("_AdvancePartial")
    <!-- learning part end-->
    <!-- footer part start-->
    @await Html.PartialAsync("_FooterPartial")
    <!-- footer part end-->

}
else
{

    <section class="special_cource padding_top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="section_tittle text-center">

                        
                        <h2 style="">@Model.FirstOrDefault().EnstrumentName Öğretmenleri</h2>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("SearchPartial")
        </div>
    </section>

}



@using Musician.MVC.Models.ViewModels;

@model List<CardModel>
@if (Model == null || Model.Count == 0)
{
    <!-- banner part start-->
    @await Html.PartialAsync("_BannerPartial")
    <!-- banner part end-->
    <!-- member_counter counter start -->
    @await Html.PartialAsync("_CounterPartial")
    <!-- member_counter counter end -->

    <!-- feature_part start-->
    @await Html.PartialAsync("_FuturePartial")
    <!-- upcoming_event part start-->
    <!-- learning part start-->
    @await Html.PartialAsync("_LearningPartial")
    <!-- learning part end-->

    <!--::review_part start::-->
    @await Html.PartialAsync("_SpecialCoursePartial")
    <!--::blog_part end::-->
    <!-- learning part start-->
    @await Html.PartialAsync("_AdvancePartial")
    <!-- learning part end-->
    <!-- footer part start-->
    @await Html.PartialAsync("_FooterPartial")
    <!-- footer part end-->

}
else
{
    @await Html.PartialAsync("_CounterPartial")

    <section class="special_cource padding_top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="section_tittle text-center">

                        <h2></h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var card in Model)
                {

                    <a asp-area="" asp-controller="Home" asp-action="CardDetails" asp-route-id="@card.Id">
                        <div class="col-sm-6 col-lg-4">
                            <div class="single_special_cource text-center">
                                <img src="~/images/@card.Image.Url" class="special_img " alt="">
                                <div class="special_cource_text">
                                    <a href="course-details.html" class="btn_4">@card.FirstName</a>
                                    <h4>@($"{card.Price:C0}")</h4>
                                    <a href="course-details.html">
                                        <h3>@card.EnstrumentName</h3>
                                    </a>
                                    <p>@card.Description</p>
                                    <p>@card.OwnDescription</p>
                                </div>

                            </div>
                        </div>
                    </a>


                }

            </div>
        </div>
    </section>







}
